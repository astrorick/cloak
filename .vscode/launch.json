    "version": "0.2.0",
    "configurations": [
        {
            "name": "Keygen",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["keygen", "${workspaceFolder}/tests/keygen/cloak.key", "-m", "argon2", "-p", "password"]
        },
        {
            "name": "Encrypt",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["enc", "${workspaceFolder}/tests/encryption/source.txt", "${workspaceFolder}/tests/encryption/cipher.clk", "-x", "chacha20poly1305", "-p", "password", "-f"]
        },
        {
            "name": "Decrypt",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["dec", "${workspaceFolder}/tests/decryption/source.clk", "${workspaceFolder}/tests/decryption/plain.txt", "-x", "chacha20poly1305", "-p", "password", "-f"]
        },
        {
            "name": "Algos",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["algos"]
        },
        {
            "name": "Version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["version"]
        }
    ]
}