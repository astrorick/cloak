    "version": "0.2.0",
    "configurations": [
        {
            "name": "Keygen",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["keygen", "${workspaceFolder}/tests/keygen/cloak.key"]
        },
        {
            "name": "Encrypt",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["enc", "source.txt", "cipher.clk", "-a", "chacha20poly1305", "-m", "argon2", "-p", "password", "-f"]
        },
        {
            "name": "Decrypt",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["dec", "cipher.clk", "plain.txt", "-a", "chacha20poly1305", "-m", "argon2", "-p", "password", "-f"]
        },
        {
            "name": "Algos",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["algos"]
        },
        {
            "name": "Methods",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["methods"]
        },
        {
            "name": "Version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cloak/main.go",
            "args": ["version"]
        }
    ]
}
